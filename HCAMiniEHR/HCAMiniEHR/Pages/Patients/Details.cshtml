@page "{id:int}"
@model HCAMiniEHR.Pages.Patients.DetailsModel
@{
    ViewData["Title"] = "Patient Details";
}

<h2>Patient Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Patient ID:</dt>
        <dd class="col-sm-9">@Model.Patient.PatientId</dd>

        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Patient.Name</dd>

        <dt class="col-sm-3">Gender:</dt>
        <dd class="col-sm-9">@Model.Patient.Gender</dd>

        <dt class="col-sm-3">Date of Birth:</dt>
        <dd class="col-sm-9">@Model.Patient.DateOfBirth.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-page="./Edit" asp-route-id="@Model.Patient.PatientId" class="btn btn-warning">Edit</a>
    <a asp-page="./Delete" asp-route-id="@Model.Patient.PatientId" class="btn btn-danger">Delete</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>