@model HCAMiniEHR.Models.Appointment

<div class="container mt-4">
    <h2 class="text-danger">Delete Appointment</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this appointment?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Patient</dt>
        <dd class="col-sm-9">@Model.Patient?.FullName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.AppointmentDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AppointmentId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
