@model List<HCAMiniEHR.Models.Appointment>

<div class="container mt-4">
    <h2 class="text-primary mb-3">Appointments</h2>

    <a asp-action="Create" class="btn btn-success mb-3">
        + New Appointment
    </a>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Patient</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Patient?.FullName</td>
                    <td>@a.AppointmentDate.ToString("dd-MMM-yyyy")</td>
                    <td>@a.Status</td>
                    <td>
                        <a asp-action="Edit"
                           asp-route-id="@a.AppointmentId"
                           class="btn btn-sm btn-warning me-1">
                            Edit
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@a.AppointmentId"
                           class="btn btn-sm btn-danger">
                            Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
