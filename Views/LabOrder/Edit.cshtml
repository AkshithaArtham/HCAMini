@model HCAMiniEHR.Models.LabOrder

<div class="container mt-4">
    <h2 class="text-primary">Edit Lab Order</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="LabOrderId" />

        <div class="mb-3">
            <label class="form-label">Appointment</label>
            <select asp-for="AppointmentId"
                    asp-items="ViewBag.Appointments"
                    class="form-select">
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Test Name</label>
            <input asp-for="TestName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option>Pending</option>
                <option>Completed</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
