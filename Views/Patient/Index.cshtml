@model List<HCAMiniEHR.Models.Patient>

<div class="container mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill"></i> Patient Management
        </h2>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Patient
        </a>
    </div>

    <!-- Card Wrapper -->
    <div class="card shadow-sm">
        <div class="card-header bg-light fw-semibold">
            Patient List
        </div>

        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Actions</th>

                    </tr>
                </thead>

                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.FullName</td>
                                <td>@p.DOB.ToShortDateString()</td>
                                <td>@p.Gender</td>
                                <td>
    <a asp-action="Edit" asp-route-id="@p.PatientId" class="btn btn-sm btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@p.PatientId" class="btn btn-sm btn-danger">Delete</a>
</td>
                            </tr>
                            
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-3">
                                No patients found.
                            </td>
                        </tr>
                    }
                    

                </tbody>
            </table>
        </div>
    </div>

</div>
