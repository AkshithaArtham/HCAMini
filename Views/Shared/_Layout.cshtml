<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HCAMiniEHR</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HCAMiniEHR.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand fw-bold text-primary"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">
                    <i class="bi bi-heart-pulse-fill"></i> HCAMiniEHR
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LEFT NAV -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Patient/Index">
                                <i class="bi bi-people-fill"></i> Patients
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Appointment/Index">
                                <i class="bi bi-calendar-check"></i> Appointments
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/LabOrder/Index">
                                <i class="bi bi-flask"></i> Lab Orders
                            </a>
                        </li>

                        <!-- Reports Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                <i class="bi bi-bar-chart"></i> Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/Reports/PendingLabOrders">
                                        Pending Lab Orders
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Reports/PatientsWithoutFollowUp">
                                        Patients Without Follow-Up
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Reports/AppointmentStatusSummary">
                                        Appointment Summary
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- RIGHT NAV -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-muted"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2026 - HCAMiniEHR | Mini EHR System
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
