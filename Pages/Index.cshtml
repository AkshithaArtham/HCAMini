@page
@model IndexModel
@{
    ViewData["Title"] = "HCAMiniEHR - Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="display-5 fw-bold">HCAMiniEHR Dashboard</h1>
                            <p class="lead mb-0">Healthcare Management System - Track Patients, Appointments, and Lab Orders</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="text-white-50 small">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</div>
                            <div class="h4 mt-2">@DateTime.Now.ToString("hh:mm tt")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Patients</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalPatients</div>
                            <a href="/Patients" class="small text-primary mt-2 d-block">View All Patients →</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-injured fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Total Doctors</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalDoctors</div>
                            <a href="/Doctors" class="small text-success mt-2 d-block">View All Doctors →</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-md fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">Today's Appointments</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TodaysAppointments</div>
                            <a href="/Appointments" class="small text-warning mt-2 d-block">Manage Appointments →</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-danger text-uppercase mb-1">Pending Lab Orders</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.PendingLabOrders</div>
                            <a href="/LabOrders" class="small text-danger mt-2 d-block">View Lab Orders →</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-vial fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Actions -->
    <div class="row mb-4">
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Patient Management</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Patients/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus text-primary me-2"></i>Register New Patient
                        </a>
                        <a href="/Patients" class="list-group-item list-group-item-action">
                            <i class="fas fa-list text-primary me-2"></i>View All Patients
                        </a>
                        <a href="/Reports/PatientsWithoutFollowup" class="list-group-item list-group-item-action">
                            <i class="fas fa-bell text-warning me-2"></i>Patients Needing Follow-up
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Appointments</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Appointments/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle text-success me-2"></i>Schedule New Appointment
                        </a>
                        <a href="/Appointments" class="list-group-item list-group-item-action">
                            <i class="fas fa-calendar text-success me-2"></i>View All Appointments
                        </a>
                        <a href="/Appointments" class="list-group-item list-group-item-action">
                            <i class="fas fa-search text-success me-2"></i>Search Appointments
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fas fa-flask me-2"></i>Lab Orders</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/LabOrders/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus text-warning me-2"></i>Create Lab Order
                        </a>
                        <a href="/LabOrders" class="list-group-item list-group-item-action">
                            <i class="fas fa-list text-warning me-2"></i>View All Lab Orders
                        </a>
                        <a href="/Reports/PendingLabOrders" class="list-group-item list-group-item-action">
                            <i class="fas fa-exclamation-triangle text-danger me-2"></i>Pending Lab Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Reports & Analytics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                                    <h5>Pending Lab Orders</h5>
                                    <p>View all pending lab tests that need attention</p>
                                    <a href="/Reports/PendingLabOrders" class="btn btn-outline-warning">View Report</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-clock fa-3x text-info mb-3"></i>
                                    <h5>Patients Without Follow-up</h5>
                                    <p>Patients needing follow-up appointments</p>
                                    <a href="/Reports/PatientsWithoutFollowup" class="btn btn-outline-info">View Report</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                                    <h5>Doctor Productivity</h5>
                                    <p>Doctor performance and appointment statistics</p>
                                    <a href="/Reports/DoctorProductivity" class="btn btn-outline-success">View Report</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row mt-4">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Appointments</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>@appointment.PatientName</td>
                                        <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge bg-@(appointment.Status == "Completed" ? "success" : "primary")">
                                                @appointment.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.RecentAppointments.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No recent appointments</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="/Appointments" class="btn btn-outline-secondary btn-sm mt-2">View All Appointments</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-vial me-2"></i>Recent Lab Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Test Name</th>
                                    <th>Patient</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var labOrder in Model.RecentLabOrders)
                                {
                                    <tr>
                                        <td>@labOrder.TestName</td>
                                        <td>@labOrder.PatientName</td>
                                        <td>
                                            <span class="badge bg-@(labOrder.Status == "Pending" ? "warning" :
                                                                                                                labOrder.Status == "Completed" ? "success" : "primary")">
                                                @labOrder.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.RecentLabOrders.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No recent lab orders</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="/LabOrders" class="btn btn-outline-dark btn-sm mt-2">View All Lab Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }

    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }

    .border-left-warning {
        border-left: 4px solid #f6c23e !important;
    }

    .border-left-danger {
        border-left: 4px solid #e74a3b !important;
    }

    .bg-gradient-primary {
        background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
    }
</style>