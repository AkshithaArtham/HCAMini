@model HCAMiniEHR.Pages.Doctors.CreateModel

<h2>Add Doctor</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Doctor.Name" />
    </div>
    <div class="form-group">
        <label>Specialty</label>
        <input class="form-control" asp-for="Doctor.Specialty" />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input class="form-control" asp-for="Doctor.Gender" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
</form>

