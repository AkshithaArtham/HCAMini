@page "{id:int}"
@model HCAMiniEHR.Pages.Patients.DeleteModel
@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this patient?</h4>
    <p>This action cannot be undone.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Patient ID:</dt>
        <dd class="col-sm-9">@Model.Patient.PatientId</dd>

        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Patient.Name</dd>

        <dt class="col-sm-3">Gender:</dt>
        <dd class="col-sm-9">@Model.Patient.Gender</dd>

        <dt class="col-sm-3">Date of Birth:</dt>
        <dd class="col-sm-9">@Model.Patient.DateOfBirth.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Patient.PatientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>