@page
@model HCAMiniEHR.Pages.LabOrders.IndexModel
@{
    ViewData["Title"] = "Lab Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lab Orders</h1>
        <a asp-page="Create" class="btn btn-primary">Create New Lab Order</a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.LabOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Lab Order ID</th>
                                <th>Patient</th>
                                <th>Appointment</th>
                                <th>Test Name</th>
                                <th>Status</th>
                                <th>Order Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var labOrder in Model.LabOrders)
                            {
                                <tr>
                                    <td>@labOrder.LabOrderId</td>
                                    <td>
                                        @labOrder.PatientName
                                        <small class="text-muted d-block">ID: @labOrder.PatientId</small>
                                    </td>
                                    <td>
                                        @if (labOrder.AppointmentId.HasValue)
                                        {
                                            <span>Appt @labOrder.AppointmentId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                </td>
                                <td>@labOrder.TestName</td>
                                <td>
                                    <span class="badge
                                                @(labOrder.Status == "Pending" ? "bg-warning" :
                                                                                        labOrder.Status == "InProgress" ? "bg-primary" :
                                                                                        labOrder.Status == "Completed" ? "bg-success" :
                                                                                        "bg-secondary")">
                                            @labOrder.Status
                                        </span>
                                    </td>
                                    <td>@labOrder.OrderDate?.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@labOrder.LabOrderId" class="btn btn-info btn-sm">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No lab orders found. <a asp-page="Create">Create your first lab order</a>.
                </div>
            }
        </div>
    </div>
</div>