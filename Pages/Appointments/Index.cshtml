@page
@model HCAMiniEHR.Pages.Appointments.IndexModel
@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Appointments</h1>
        <a asp-page="Create" class="btn btn-primary">Create New Appointment</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" name="SearchString" placeholder="Search by patient, doctor, or reason">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(HttpContext.Request.Query["SearchString"]))
            {
                <div class="alert alert-success">
                    Search working! You searched for: @HttpContext.Request.Query["SearchString"]
                </div>
            }

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Appointment ID</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date & Time</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments)
                    {
                        <tr>
                            <td>@appointment.AppointmentId</td>
                            <td>@appointment.Patient?.Name</td>
                            <td>@appointment.Doctor?.Name</td>
                            <td>@appointment.AppointmentDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@appointment.Reason</td>
                            <td>
                                <span class="badge
                                        @(appointment.Status == "Scheduled" ? "bg-primary" :
                                                                            appointment.Status == "Completed" ? "bg-success" :
                                                                            "bg-secondary")">
                                    @appointment.Status
                                </span>
                            </td>
                            <td>
                            
                                <a asp-page="./Details" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">Details</a>
                                <!-- ... other buttons -->
                                <a asp-page="./Edit" asp-route-id="@appointment.AppointmentId" class="btn btn-warning btn-sm">Edit</a>
                                @if (appointment.Status == "Scheduled")
                                {
                                    <form method="post" asp-page-handler="Complete" asp-route-id="@appointment.AppointmentId" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm">Complete</button>
                                    </form>
                                    <form method="post" asp-page-handler="Cancel" asp-route-id="@appointment.AppointmentId" class="d-inline">
                                        <button type="submit" class="btn btn-warning btn-sm">Cancel</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Appointments.Any())
            {
                <div class="alert alert-info">
                    No appointments found. <a asp-page="Create">Create your first appointment</a>.
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            const searchButton = document.getElementById('searchButton');

            if (searchForm) {
                // Prevent any default form submission issues
                searchForm.addEventListener('submit', function(e) {
                    console.log('Form submitting...');
                    // Allow normal form submission
                });

                // Also handle button click
                if (searchButton) {
                    searchButton.addEventListener('click', function(e) {
                        e.preventDefault(); // Prevent default
                        searchForm.submit(); // Manually submit form
                    });
                }

                // Allow Enter key to submit
                const searchInput = document.getElementById('searchInput');
                if (searchInput) {
                    searchInput.addEventListener('keypress', function(e) {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            searchForm.submit();
                        }
                    });
                }
            }
        });
    </script>
}