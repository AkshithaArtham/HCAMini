@page
@model HCAMiniEHR.Pages.Appointments.TestModel
@{
    ViewData["Title"] = "System Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>System Test Results</h2>
                </div>
                <div class="card-body">

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }

                    <h4>Test Results</h4>
                    <div class="mb-4">
                        @foreach (var result in Model.TestResults)
                        {
                            <div class="alert @(result.Contains("Success") || result.Contains("in DB") ? "alert-info" : "alert-warning")">
                                @result
                            </div>
                        }
                    </div>

                    <div class="d-flex gap-2 mb-4">
                        <form method="post" asp-page-handler="TriggerAudit">
                            <button type="submit" class="btn btn-primary">
                                Trigger Audit Test (Create/Update/Delete)
                            </button>
                        </form>
                        <a asp-page="Index" class="btn btn-secondary">View Appointments</a>
                        <a asp-page="Create" class="btn btn-success">Create New Appointment</a>
                    </div>

                    @if (Model.AuditLogs.Any())
                    {
                        <h4>Recent Appointment Audit Logs</h4>
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Action</th>
                                    <th>Record ID</th>
                                    <th>Changed At</th>
                                    <th>Changed By</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.AuditLogs)
                                {
                                    <tr>
                                        <td>@log.AuditLogId</td>
                                        <td>
                                            <span class="badge
                                                        @(log.Action == "INSERT" ? "bg-success" :
                                                                                                    log.Action == "UPDATE" ? "bg-warning" : "bg-danger")">
                                                @log.Action
                                            </span>
                                        </td>
                                        <td>@log.RecordId</td>
                                        <td>@log.ChangedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@log.ChangedBy</td>
                                        <td>
                                            <button class="btn btn-sm btn-info"
                                                    type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#details-@log.AuditLogId">
                                                View Details
                                            </button>
                                        </td>
                                    </tr>
                                    <tr class="collapse" id="details-@log.AuditLogId">
                                        <td colspan="6">
                                            <div class="card card-body">
                                                <h6>Old Values:</h6>
                                                <pre class="bg-light p-2">@log.OldValues</pre>
                                                <h6>New Values:</h6>
                                                <pre class="bg-light p-2">@log.NewValues</pre>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No audit logs found. Try triggering an audit test above.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>